# Define Aliases
alias ls="exa"
alias kubectl="kubecolor"
alias k="kubecolor"

# Direnv Hook
eval "$(direnv hook zsh)"

# Set Environment Variables
EDITOR=nvim
GO111MODULE=on

# Set Path Variables
GOPATH=$HOME/go
PATH=$PATH

# History
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000

# Extended Pattern Matching
setopt autocd extendedglob nomatch

# Disable Error Beep
unsetopt beep

# Set "Vi mode"
bindkey -v

# Enable Completion
zstyle ":completion:*" completer _complete _ignored
zstyle :compinstall filename "$HOME/.zshrc"
autoload -Uz compinit
compinit

# Customize Prompt
setopt PROMPT_SUBST
PROMPT="%F{yellow}%n%f@%F{green}%M%f:%F{blue}%~%f> "
